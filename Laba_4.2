import java.util.HashSet;
import java.util.Random;
import java.util.Set;
import java.util.Scanner;

public class Laba_4_1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Введіть кількість рядків матриці:");
        int rows = scanner.nextInt();
        System.out.println("Введіть кількість стовпців матриці:");
        int cols = scanner.nextInt();

        int[][] matrix = generateRandomMatrix(rows, cols);

        int uniqueCount = countUniqueElements(matrix);

        System.out.println("Згенерована матриця: " + uniqueCount);
        printMatrix(matrix);
        System.out.println("Кількість унікальних елементів у матриці: " + uniqueCount);
    }

    public static int [][] generateRandomMatrix(int rows, int cols) {
        Random random = new Random();
        int [][] matrix = new int[rows][cols];
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < cols; j++) {
                matrix[i][j] = random.nextInt(201) - 100;
            }
        }
        return matrix;
    }

    public static void printMatrix(int[][] matrix) {
        for (int[] row : matrix) {
            for (int num : row) {
                System.out.print(num + "\t");
            }
            System.out.println();
        }
    }

    public static int countUniqueElements(int[][] matrix) {
        Set<Integer> uniqueElements = new HashSet<>();
        for (int[] row : matrix) {
            for (int num : row) {
                uniqueElements.add(num);
            }
        }
        return uniqueElements.size();
    }
}
